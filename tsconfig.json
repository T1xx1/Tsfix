{
	"include": ["./src/**/*.ts"],
	"compilerOptions": {
		"skipLibCheck": true,
		/* env */
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		/* linter */
		"verbatimModuleSyntax": true,
		"noImplicitAny": true,
		/* type checking */
		"strict": true,
		/* compiler */
		"target": "ESNext",
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist"
	}
}
